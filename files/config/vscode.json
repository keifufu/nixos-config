{
  "search.followSymlinks": false,
  "window.titleBarStyle": "custom",
  "zenMode.fullScreen": false,
  "keyboard.dispatch": "keyCode", // fixes wrong keyboard shortcut layout
  "editor.codeLens": true,
  "update.mode": "none",
  "workbench.editor.enablePreview": false,
  "workbench.editor.enablePreviewFromQuickOpen": false,
  "workbench.startupEditor": "newUntitledFile",
  "diffEditor.ignoreTrimWhitespace": true,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": false,
  "editor.wordWrap": "on",
  "files.defaultLanguage": "",
  "extensions.autoCheckUpdates": false,
  "extensions.autoUpdate": false,
  "workbench.colorTheme": "Catppuccin Mocha",
  "workbench.sideBar.location": "left",
  "editor.selectionClipboard": false,
  "files.insertFinalNewline": true,
  /* END general settings */
  /* START editor settings */
  "editor.minimap.enabled": false,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.tabSize": 2,
  "editor.fontSize": 14,
  "editor.mouseWheelZoom": true,
  "editor.inlineSuggest.enabled": true,
  // "editor.fontFamily": "Hack Nerd Font, monospace",
  "editor.fontFamily": "Comic Code, Hack Nerd Font, monospace",
  "editor.accessibilitySupport": "off",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.renderWhitespace": "none",
  "editor.unicodeHighlight.allowedCharacters": {
    "ü": true,
    "ä": true,
    "ö": true,
    "ß": true,
    "Ü": true,
    "©": true
  },
  "editor.suggestSelection": "first",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.sortImports": "explicit"
  },
  "[css]": { "editor.suggest.insertMode": "replace" },
  // "[prisma]": { "editor.defaultFormatter": "Prisma.prisma" },
  "[rust]": { "editor.defaultFormatter": "rust-lang.rust-analyzer" },
  "[c]": { "editor.defaultFormatter": "xaver.clang-format" },
  "[cpp]": { "editor.defaultFormatter": "xaver.clang-format" },
  "files.associations": {
    "vscode.json": "jsonc", // allow comments in vscode.json
    /* For some reason this is needed to get intellisense to work for .css files */
    "*.css": "css",
    "css": "css",
    "VERSION": "wat"
  },
  "[wat]": {
    "files.insertFinalNewline": false
  },
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true
  },
  /* END editor settings */
  /* START git settings */
  "git.enableCommitSigning": true,
  "git.confirmSync": false,
  /* END git settings */
  /* START eslint settings */
  "eslint.lintTask.enable": true,
  "eslint.format.enable": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  /* END eslint settings */
  /* START extension settings */
  "clangd.fallbackFlags": [
    "-I${workspaceFolder}/include",
    "-I${workspaceFolder}/deps",
    "-DWNP_BUILD_PLATFORM_WEB",
    "-DWNP_BUILD_PLATFORM_LINUX",
    "-DWNP_BUILD_PLATFORM_DARWIN",
    "-DWNP_BUILD_PLATFORM_WINDOWS",
    "-I/nix/store/6r6rzv2v3x8mh2ki391gvc9y9954yzlg-glib-2.80.4-dev/include/glib-2.0",
    "-I/nix/store/pjxrn2wn0sn533p48jz5qxgjld84hn3i-glib-2.80.4/lib/glib-2.0/include",
    "-I/nix/store/y6kgqmsdvld6hqh5prva1629va7xvf0w-libwnp-3.0.0/include"
  ],
  "livePreview.portNumber": 3727,
  "livePreview.customExternalBrowser": "Zen",
  "css.lint.unknownAtRules": "ignore",
  /* END extension settings */
  /* New from here, added automatically */
  "git.openRepositoryInParentFolders": "never",
  "rust-analyzer.check.command": "clippy",
  "C_Cpp.default.compilerPath": "",
  "workbench.editor.empty.hint": "hidden",
  "workbench.layoutControl.enabled": false,
  "breadcrumbs.enabled": false,
  "window.menuBarVisibility": "toggle",
  "window.zoomLevel": 2,
  "cSpell.userWords": ["dimland", "keifufu", "libwayland", "libxkbcommon"],
  "workbench.productIconTheme": "bongocat"
}
